{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "west build",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": "build",
      "problemMatcher": [
        {
          "base": "$gcc",
          "fileLocation": ["autoDetect", "${workspaceFolder}/app/build"]
        }
      ]
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "west flash",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": "test"
    },
    {
      "label": "Debug",
      "type": "shell",
      "command": "west debug",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": "test"
    }
  ]
}
